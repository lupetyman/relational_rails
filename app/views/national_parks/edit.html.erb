<h2>Edit <%= @national_park.name %></h2>

<%= form_with url: "/national_parks/#{@national_park.id}", methods: :patch, local: true do |form| %>
  <%= form.label :name, 'Name:' %>
  <%= form.text_field :name %><br><br>

  <%= form.label :acreage, 'Acres:' %>
  <%= form.text_field :acreage %><br><br>

  <%= form.label :is_seasonal, 'Seasonal:' %>
  <%= form.check_box :is_seasonal, {}, 'true', 'false' %><br><br>

  <%= form.submit 'Update National Park' %>
<% end %>
