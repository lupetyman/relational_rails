<%= form_with url: '/trails', methods: 'post', local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>
  <%= form.label :length %>
  <%= form.text_field :length %>
  <%= form.label :is_loop %>
  <%= form.text_field :is_loop %>
  <%= form.label :national_park_id %>
  <%= form.collection_select :national_park_id, NationalPark.all, :id, :name %>
  <%= form.submit 'Create Trail' %>
<% end %>
