<h1>All Campgrounds</h1>

<% @campgrounds.each do |campground| %>
  <h3>
    <a href="/campgrounds/<%= campground.id %>"><%= campground.name %></a>
    <%= campground.created_at %><br>
    <%= button_to 'Edit', "/campgrounds/#{campground.id}/edit", method: :get %>
    <%= button_to "Delete #{campground.name}", "/campgrounds/#{campground.id}", method: :delete %>
  </h3>
<% end %>

<a href="/campgrounds/new">New Campground</a>
