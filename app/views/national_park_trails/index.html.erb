<h1>Trails at <%= @national_park.name %> National Park</h1>

<% @trails.each do |trail| %>
  <h3><a href="/trails/<%= trail.id %>"><%= trail.name %></a></h3>
  <p>Length: <%= trail.length %> miles</p>
  <p>Loop?: <%= trail.is_loop %></p>
  <p>Created At: <%= trail.created_at %></p>
  <p>Updated At: <%= trail.updated_at %></p>
  <p><%= link_to "Update #{trail.name}", "/trails/#{trail.id}/edit" %></p>
  <p><%= link_to "Delete #{trail.name}", "/trails/#{trail.id}", method: :delete %></p>
  <br>
<% end %>

<%= link_to 'Create Trail', "/national_parks/#{@national_park.id}/trails/new" %>

<%= link_to 'Sort Trails By Name', "/national_parks/#{@national_park.id}/trails?sort=name_asc" %>
